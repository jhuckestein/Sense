        <!-- code for drop down menu for reports -->

                <html>
                <head>
               <script type="text/javascript">
                    function populate(d1,d2,dateran){
                    var d1 = document.getElementById(d1);
                    var d2 = document.getElementById(d2);
                    var dateran = document.getElementById(dateran);

                    d2.innerHTML = "";
                    dateran.innerHTML = "";
                    if(d1.value == "Select a type of survey"){
                    var optionArray = ["|","Episode|Episode","Adjustment Response|Adjustment Response","Emotional State|Emotional State"];
                    }
                    else if(d1.value == "Select a date range - retrieves All Surveys"){
                    var optionArray = ["|","Select a date range|Select a date range",];
                        }
                    for(var option in optionArray){
                    var pair =optionArray[option].split("|");
                    var newOption = document.createElement("option");
                    newOption.value = pair[0];
                    newOption.innerHTML = pair[1];
                    d2.options.add(newOption);
                    dateran.options.add(newOption);
                    }
               }
               </script>
                </head>


                <body>
                <h3>Select your report 8!</h3>

